<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:weightSum="100"
    tools:context=".activities.percorsi.CreazionePercorsoActivity"
    tools:ignore="HardcodedText">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <EditText
        android:paddingTop="20dp"
        android:id="@+id/nomePercorso"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:fontFamily="@font/posterama_1927_regular"
        android:gravity="center"
        android:hint="@string/NomePercorso"
        android:textColorHint="@color/black"
        android:backgroundTint="@color/verdePrimario"
        android:textSize="20sp"
        android:inputType="text"
        android:importantForAutofill="no"/>
    <ImageView
        android:id="@+id/showTutorialPercorsi"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/question" />

</LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewZone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="95"
        android:layout_gravity="end"
        android:layout_marginTop="10dp"
        android:background="@color/white"/>


    <LinearLayout
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="4"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAggiungiZona"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:backgroundTint="@color/gialloSecondario"
            android:fontFamily="@font/posterama_1927_regular"
            android:text="@string/AggiuntaZonaPercorso"
            android:textSize="20sp"
            app:cornerRadius="50dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:layout_weight="1"
            android:layout_marginEnd="5dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnConfermaPercorso"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/verdePrimario"
            android:fontFamily="@font/posterama_1927_regular"
            android:text="@string/conferma"
            android:textSize="20sp"
            app:cornerRadius="50dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:layout_weight="1"
            android:layout_marginStart="5dp"/>



    </LinearLayout>


</LinearLayout>

