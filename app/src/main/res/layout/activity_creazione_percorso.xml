<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:weightSum="100"
    tools:context=".activities.CreazionePercorsoActivity"
    tools:ignore="HardcodedText">

    <EditText
        android:id="@+id/nomePercorso"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:fontFamily="@font/posterama_1927_regular"
        android:gravity="center"
        android:hint="@string/NomePercorso"
        android:textColorHint="@color/orangeAction"
        android:textSize="20sp"
        android:inputType="text"
        android:importantForAutofill="no"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewZone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="85" />


    <LinearLayout
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="5"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnConfermaPercorso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:backgroundTint="@color/verdePrimario"
            android:fontFamily="@font/posterama_1927_regular"
            android:text="@string/conferma"
            android:textSize="20sp"
            app:cornerRadius="50dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAggiungiZona"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:backgroundTint="@color/orangeAction"
            android:fontFamily="@font/posterama_1927_regular"
            android:text="@string/AggiuntaZonaPercorso"
            android:textSize="20sp"
            app:cornerRadius="50dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>


</LinearLayout>

