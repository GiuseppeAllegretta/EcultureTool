<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".activities.CreazionePercorsoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewZone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="90"
            android:background="@color/black" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnConfermaPercorso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recyclerViewZone"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/orangeAction"
            android:fontFamily="@font/posterama_1927_regular"
            android:text="Conferma"
            android:textSize="22sp"
            app:cornerRadius="50dp" />

    </LinearLayout>

</RelativeLayout>
