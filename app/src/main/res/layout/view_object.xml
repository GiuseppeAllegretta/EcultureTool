<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/minimal_background"
    tools:context=".ObjectActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15sp"
        android:paddingHorizontal="30dp"
        android:text="Nome Oggetto"
        android:textSize="40dp"
        android:textColor="@color/black"
        android:fontFamily="@font/le_chant" />

    <ImageView
        android:id="@+id/immagine"
        android:layout_width="300sp"
        android:layout_height="250sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80sp"
        android:layout_marginEnd="10sp" />

    <TextView
        android:id="@+id/descrizione"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="360sp"
        android:paddingHorizontal="20dp"
        android:text="Descrizione"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="italic" />

    <include layout="@layout/object_lower_menu" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>