<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:id="@+id/oggettoSelezionato"
    tools:ignore="HardcodedText">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="1dp">

        <ImageView
            android:id="@+id/iconaZona"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:src="@mipmap/ic_launcher"
            android:contentDescription="image" />

        <TextView
            android:id="@+id/numeroZona"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:fontFamily="@font/posterama_1927_regular"
            android:gravity="center"
            android:text=""
            android:textColor="@color/orangeAction"
            android:textSize="32sp" />


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@+id/numeroZona"
            android:columnCount="1"
            android:layout_marginStart="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nomeZona"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:ellipsize="end"
                android:gravity="left"
                android:singleLine="true"
                android:text="Nome Zona"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/descrizioneZona"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_gravity="center|left"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="Descrizione completa della zona"
                tools:ignore="RtlHardcoded" />

        </GridLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:layout_marginTop="1dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"/>

</LinearLayout>