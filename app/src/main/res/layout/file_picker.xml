<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/minimal_background"
    android:paddingBottom="20dp"
    tools:context=".utilities.FilePicker">

    <ScrollView
        android:id="@+id/scoll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image"
                android:layout_width="300sp"
                android:layout_height="300sp"
                android:layout_marginTop="30dp"
                android:background="@drawable/gioconda"
                android:contentDescription="immagine"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <!-- TODO creare un modulo di caricamento che ridimensioni le immagini-->

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Clicca sull'immagine per modificare"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/image" />


            <EditText
                android:id="@+id/nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:autofillHints="Nome opera"
                android:background="@color/opacityWhite"
                android:hint="Nome opera"
                android:inputType="text"
                android:paddingHorizontal="20dp"
                android:paddingVertical="4dp"
                android:textColor="@color/black"
                android:textColorHint="@color/opacityBlack"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text" />

            <EditText
                android:id="@+id/tipologia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:autofillHints="Tipologia dell'opera"
                android:background="@color/opacityWhite"
                android:hint="Tipologia dell'opera"
                android:inputType="textMultiLine"
                android:paddingHorizontal="20dp"
                android:paddingVertical="4dp"
                android:textColor="@color/black"
                android:textColorHint="@color/opacityBlack"
                android:textSize="22sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/nome" />

            <EditText
                android:id="@+id/descrizione"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:autofillHints="Descrizione"
                android:background="@color/opacityWhite"
                android:hint="Descrizione"
                android:inputType="textAutoComplete"
                android:paddingHorizontal="20dp"
                android:paddingVertical="4dp"
                android:textColor="@color/black"
                android:textColorHint="@color/opacityBlack"
                android:textSize="22sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tipologia" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCrea"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:layout_marginTop="26dp"
                android:backgroundTint="@color/verdeSecondario"
                android:shadowRadius="@integer/material_motion_duration_long_2"
                android:text="Crea"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:cornerRadius="5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/descrizione" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>